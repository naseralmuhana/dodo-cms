{
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^(react(/.*)?|react)$",
    "^(next(/.*)?|next)$",
    "<THIRD_PARTY_MODULES>",
    "^@/db/(.*)$",
    "^@/lib/(.*)$",
    "^@/types/(.*)$",
    "^@/constants/(.*)$",
    "^@/provider/(.*)$",
    "^@/hooks/(.*)$",
    "^@/components/(.*)$",
    "^@/features/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "semi": false,
  "trailingComma": "none"
}
